<%- include('../partials/header', { pageTitle: 'Book Page' }) %>

    <div class="main-serch">

        <div class="search-bar">
            <div class="search-icon">üîç</div>
            <input type="text" class="search-input" placeholder="Search...">
        </div>

        <div class="filter-optionsDev">
            <a href="#" class="filter-option">All Boooks</a>
            <a href="#" class="filter-option">Fiction</a>
            <a href="#" class="filter-option">Non Fiction</a>
            <a href="#" class="filter-option">Biography</a>
            <a href="#" class="filter-option">History</a>

        </div>
        <div class="resetFiltersDEV"> <button class="resetFilters">Reset Filters</button>
        </div>

    </div>
    <div class="main-area">

        <div class="book-listings">
            <table>
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Category</th>
                        <th>Availability</th>
                        <th>Img</th>
                    </tr>
                </thead>
                <tbody>
                    <% book.forEach(book => { %>
                        <tr>
                            <td class="book-title">
                                <a class="book-title" href="/book/<%= book._id %>">
                                    <%= book.title %>
                                </a>
                            </td>
                            <td class="book-authors ">

                                <%= book.authors %>

                            </td>
                            <td class=" book-isbn">
                                <%= book.isbn %>
                            </td>
                            <td class="book-category">
                                <%= book.category %>
                            </td>
                            <td class="book-availability">
                                <%= book.availability ? 'Available' : 'Not Available' %>
                            </td>
                            <td>
                                <a href="#" <%=book.cover_url%>><img class="bookImg" src="../img/Black_Book_PNG_Clipart-1048.png" alt=""></a>
                            </td>
                        </tr>
                        <% }) %>
            </table>

        </div>



    </div>
    <dev class="load-more-buttonDev"> <button class="load-more-button">Load More</button>
